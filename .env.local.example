# ============================================
# SAGE Multi-Agent System Environment Variables
# ============================================

# ---------- Root Agent Configuration ----------
ROOT_AGENT_NAME=root
ROOT_AGENT_PORT=18080
ROOT_AGENT_HOST=0.0.0.0

# ---------- Client API (Optional, can be disabled) ----------
CLIENT_PORT=8086

# ---------- Gateway Configuration ----------
GATEWAY_PORT=5500
GATEWAY_URL=http://localhost:5500

# For remote deployment:
# GATEWAY_URL=https://gateway.your-domain.com

# ---------- Agent URLs (External Agents) ----------
# Planning Agent
PLANNING_URL=http://localhost:19081
# PLANNING_URL=https://planning.your-domain.com

# Medical Agent
MEDICAL_URL=http://localhost:19082
# MEDICAL_URL=https://medical.your-domain.com

# Payment Agent
PAYMENT_URL=http://localhost:19083
# PAYMENT_URL=https://payment.your-domain.com

# ---------- SAGE Protocol Configuration ----------
ROOT_SAGE_ENABLED=true
ROOT_JWK_FILE=./keys/root.jwk
ROOT_DID=

# ---------- HPKE Configuration ----------
ROOT_HPKE=false
ROOT_HPKE_KEYS=merged_agent_keys.json
ROOT_HPKE_TARGETS=payment,medical,planning

# ---------- LLM Configuration ----------
LLM_ENABLED=true
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=
LLM_MODEL=gemma2:2b
LLM_LANG_DEFAULT=auto
LLM_TIMEOUT_MS=80000

# ---------- Sub-Agent SAGE Toggles ----------
PLANNING_SAGE_ENABLED=true
MEDICAL_SAGE_ENABLED=true
PAYMENT_SAGE_ENABLED=true

# ---------- Sub-Agent Ports (for in-process agents) ----------
PAYMENT_AGENT_PORT=19083
MEDICAL_AGENT_PORT=19082
PLANNING_AGENT_PORT=19081

# ---------- Sub-Agent Keys ----------
PAYMENT_JWK_FILE=./keys/payment.jwk
PAYMENT_KEM_JWK_FILE=./keys/kem/payment.x25519.jwk

MEDICAL_JWK_FILE=./keys/medical.jwk
MEDICAL_KEM_JWK_FILE=./keys/kem/medical.x25519.jwk

PLANNING_JWK_FILE=./keys/planning.jwk
PLANNING_KEM_JWK_FILE=./keys/kem/planning.x25519.jwk

# ---------- OpenAI Configuration (if using OpenAI LLM) ----------
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_api_key_here
