# SAGE Multi-Agent Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ===============================================
# REQUIRED: Google API Configuration
# ===============================================
# Get your API key from: https://ai.google.dev/gemini-api/docs/api-key
GOOGLE_API_KEY=your_gemini_api_key_here

# ===============================================
# Blockchain Configuration
# ===============================================
# Network type: local, kaia_testnet, ethereum_mainnet
BLOCKCHAIN_NETWORK=local

# Local Hardhat network (default for development)
CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
RPC_URL=http://localhost:8545
CHAIN_ID=31337

# For Kaia Testnet (uncomment to use)
# CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
# RPC_URL=https://public-en.kairos.node.kaia.io
# CHAIN_ID=1001

# Private key for registration (Hardhat default account #0)
REGISTRATION_PRIVATE_KEY=ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ===============================================
# Agent Configuration
# ===============================================
# Configuration file paths
AGENT_CONFIG_PATH=configs/agent_config_local.yaml
REGISTRATION_CONFIG_PATH=configs/agent_registration_local.yaml

# Agent endpoints
ROOT_AGENT_URL=http://localhost:8080
ORDERING_AGENT_URL=http://localhost:8083
PLANNING_AGENT_URL=http://localhost:8084
CLIENT_SERVER_URL=http://localhost:8086
WEBSOCKET_SERVER_URL=ws://localhost:8085

# ===============================================
# SAGE Protocol Configuration
# ===============================================
# Enable SAGE protocol features
SAGE_ENABLED=true

# Require verification on startup (set to false for quick testing)
SAGE_VERIFICATION_REQUIRED=false

# Signature algorithm: ed25519, secp256k1
SAGE_SIGNATURE_ALGORITHM=ed25519

# Message signature fields (RFC 9421)
SAGE_SIGNATURE_FIELDS=@method,@path,content-type,date,x-agent-did

# ===============================================
# Security Configuration
# ===============================================
# Timestamp tolerance in seconds
TIMESTAMP_TOLERANCE=300

# Enable nonce for replay protection
NONCE_REQUIRED=true

# Enable message tampering simulation for demo
ENABLE_MALICIOUS_GATEWAY=true

# ===============================================
# Logging Configuration
# ===============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable structured logging (JSON format)
STRUCTURED_LOGGING=false

# Log file path (leave empty for stdout only)
LOG_FILE=

# ===============================================
# Performance Configuration
# ===============================================
# Maximum concurrent requests per agent
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# WebSocket configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_MAX_MESSAGE_SIZE=65536

# ===============================================
# Development Configuration
# ===============================================
# Enable debug mode
DEBUG_MODE=true

# Enable CORS for development
ENABLE_CORS=true

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Enable hot reload for configuration files
HOT_RELOAD_CONFIG=true

# ===============================================
# Database Configuration (if needed)
# ===============================================
# Database type: memory, file, postgres, mysql
DATABASE_TYPE=memory

# Database connection string (for external databases)
# DATABASE_URL=postgres://user:password@localhost:5432/sage_agents

# File database path (for file-based storage)
DATABASE_FILE=./data/agents.db

# ===============================================
# Monitoring Configuration
# ===============================================
# Enable metrics collection
ENABLE_METRICS=true

# Metrics server port
METRICS_PORT=9090

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Enable Prometheus metrics
PROMETHEUS_ENABLED=false

# ===============================================
# Testing Configuration
# ===============================================
# Skip blockchain verification for testing
SKIP_BLOCKCHAIN_VERIFICATION=false

# Mock external API calls for testing
MOCK_EXTERNAL_APIS=false

# Test data directory
TEST_DATA_DIR=./test/data

# ===============================================
# Advanced Configuration
# ===============================================
# Custom certificate paths (for HTTPS)
TLS_CERT_FILE=
TLS_KEY_FILE=

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Enable distributed tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Circuit breaker configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60